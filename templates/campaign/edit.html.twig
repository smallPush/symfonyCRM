        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_campaign_index') }}">Initiatives</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_campaign_show', {'id': campaign.id}) }}">{{ campaign.title }}</a></li>
