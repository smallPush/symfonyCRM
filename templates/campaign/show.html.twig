{% extends 'base.html.twig' %}

{% block title %}{{ campaign.title }}{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb" class="mb-5">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_campaign_index') }}" class="text-decoration-none text-muted">Initiatives</a></li>
            <li class="breadcrumb-item active fw-bold text-primary" aria-current="page">{{ campaign.title }}</li>
        </ol>
    </nav>

    <div class="row g-5">
        <div class="col-lg-8">
            <div class="card border-0 bg-white p-2 rounded-lg mb-5" style="box-shadow: var(--shadow-lg);">
                <div class="rounded-3 overflow-hidden bg-primary bg-opacity-10 d-flex flex-column align-items-center justify-content-center" style="height: 450px; border: 1px dashed var(--brand-primary);">
                    <i class="bi bi-image text-primary opacity-25 mb-3" style="font-size: 5rem;"></i>
                    <span class="text-primary fw-bold letter-spacing-1 small">MEDIA STREAM ACTIVE</span>
                </div>
            </div>

            <div class="mb-5">
                <h1 class="display-3 fw-bold mb-3 tracking-tighter">{{ campaign.title }}</h1>
                <div class="d-flex align-items-center gap-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 p-2 rounded-circle me-3">
                            <i class="bi bi-calendar-event text-primary"></i>
                        </div>
                        <div>
                            <div class="small text-muted fw-bold text-uppercase" style="font-size: 0.65rem;">LAUNCH DATE</div>
                            <div class="fw-bold text-dark">{{ campaign.createdAt|date('M d, Y') }}</div>
                        </div>
                    </div>
                    <div class="vr opacity-10"></div>
                    <div class="d-flex align-items-center">
                        <div class="bg-success bg-opacity-10 p-2 rounded-circle me-3">
                            <i class="bi bi-shield-check text-success"></i>
                        </div>
                        <div>
                            <div class="small text-muted fw-bold text-uppercase" style="font-size: 0.65rem;">VERIFICATION</div>
                            <div class="fw-bold text-success">CERTIFIED ENTITY</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="p-5 bg-white rounded-lg shadow-sm border border-subtle mb-5">
                <h3 class="h4 mb-4 pb-2 border-bottom border-subtle">Initiative Framework</h3>
                <div class="lead text-body mb-0" style="font-size: 1.15rem;">
                    {{ campaign.description }}
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="sticky-top" style="top: 7rem; z-index: 100;">
                <div class="card p-3">
                    <div class="card-body">
                        {% set percent = campaign.financialGoal > 0 ? (campaign.currentAmount / campaign.financialGoal) * 100 : 0 %}

                        <div class="mb-4">
                            <div class="small text-muted fw-bold text-uppercase mb-1" style="font-size: 0.65rem; letter-spacing: 0.1em;">CAPITAL COMMITTED</div>
                            <div class="h1 fw-800 mb-0">${{ campaign.currentAmount|number_format(0) }}</div>
                            <div class="small text-muted mt-1">of ${{ campaign.financialGoal|number_format(0) }} target objective</div>
                        </div>

                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="small fw-bold">CAPACITY FILLED</span>
                                <span class="badge bg-primary bg-opacity-10 text-primary">{{ percent|number_format(0) }}%</span>
                            </div>
                            <div class="progress" style="height: 12px;">
                                <div class="progress-bar" role="progressbar" style="width: {{ percent }}%"></div>
                            </div>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-6">
                                <div class="p-3 bg-light rounded-sm">
                                    <div class="small text-muted fw-bold text-uppercase mb-1" style="font-size: 0.6rem;">INVESTMENT</div>
                                    <div class="fw-bold text-dark">${{ (campaign.totalInvestment ?: 0)|number_format(0) }}</div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="p-3 bg-light rounded-sm">
                                    <div class="small text-muted fw-bold text-uppercase mb-1" style="font-size: 0.6rem;">EST. ROI</div>
                                    <div class="fw-bold text-primary">{{ (campaign.roiPercentage ?: 0)|number_format(1) }}%</div>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-3">
                            <button class="btn btn-primary py-3 fw-800 d-flex align-items-center justify-content-center">
                                <i class="bi bi-lightning-fill me-2"></i> DEPLOY CAPITAL
                            </button>
                            <a href="{{ path('app_campaign_edit', {'id': campaign.id}) }}" class="btn btn-light py-3 border border-subtle fw-bold">
                                <i class="bi bi-gear-fill me-2"></i> MODIFY CONTEXT
                            </a>
                            <button class="btn btn-link text-muted small text-decoration-none">
                                <i class="bi bi-share me-2"></i> DISTRIBUTE INTELLIGENCE
                            </button>
                        </div>

                        <div class="mt-5 pt-4 border-top">
                            <h6 class="fw-bold mb-4 small text-muted text-uppercase letter-spacing-1">Recent Intelligence</h6>
                            <div class="vstack gap-4">
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3 shadow-sm" style="width: 40px; height: 40px; font-weight: 800;">JD</div>
                                    <div>
                                        <div class="fw-bold text-dark small">John Doe <span class="text-muted fw-normal">committed</span> $50</div>
                                        <div class="text-muted" style="font-size: 0.75rem;">120 seconds ago</div>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center">
                                    <div class="bg-dark text-white rounded-circle d-flex align-items-center justify-content-center me-3 shadow-sm" style="width: 40px; height: 40px; font-weight: 800;"><i class="bi bi-incognito"></i></div>
                                    <div>
                                        <div class="fw-bold text-dark small">Private Actor <span class="text-muted fw-normal">committed</span> $100</div>
                                        <div class="text-muted" style="font-size: 0.75rem;">54 minutes ago</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
